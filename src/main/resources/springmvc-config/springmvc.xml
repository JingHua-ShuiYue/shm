<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-4.3.xsd http://www.springframework.org/schema/mvc https://www.springframework.org/schema/mvc/spring-mvc.xsd">
    <!-- 指定扫描的包 -->
    <context:component-scan base-package="com.gm.controller"/>
    <!-- 配置视图解析器 -->
    <bean id="viewResolver"
          class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/page/"></property>
        <property name="suffix" value=".html"></property>
    </bean>
    <mvc:view-controller path="/" view-name="login-3"></mvc:view-controller>
    <!--<mvc:default-servlet-handler/>-->
    <mvc:resources mapping="/css/**" location="layuimini-2-onepage/css/"></mvc:resources>
    <mvc:resources mapping="/lib/**" location="layuimini-2-onepage/lib/"></mvc:resources>
    <mvc:resources mapping="/js/**" location="layuimini-2-onepage/js/"></mvc:resources>
    <mvc:resources mapping="/images/**" location="layuimini-2-onepage/images/"></mvc:resources>
    <mvc:resources mapping="/page/**" location="layuimini-2-onepage/page/"></mvc:resources>
    <mvc:resources mapping="/**" location="layuimini-2-onepage/"></mvc:resources>
    <mvc:annotation-driven/>
</beans>
